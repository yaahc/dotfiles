            \ . synIDattr(synIDtrans(synID(line("."),col("."),1)),"name") . ">"

function! ExecuteMacroOverVisualRange()
    echo "@".getcmdline()
    execute ":'<,'>normal @".nr2char(getchar())
endfunction

