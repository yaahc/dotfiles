function! TmuxGdbInput()
    let l:cmd = input('Enter gdb command: ')
    silent exec "!tmux send-keys -t \\! '".l:cmd."' Enter"
endfunction " }}}3


function! FoldNonSearch() " {{{2
    let l:l = line('.')
    let l:c = col('.')

    %foldclose!
    g//normal! zv

    call cursor(l:l, l:c)
endfunction

